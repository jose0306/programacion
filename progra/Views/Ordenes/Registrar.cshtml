@model Orden

<h1>Registrar Ordenes</h1>

<form method="post">
<div asp-validation-summary="All"></div>
<div class="form-group">
    <label asp-for="Fecha"></label>
    <input asp-for="Fecha" class="form-control">
</div>
<div class="form-group">
    <label>Empleado: </label>
    <select asp-for="EmpleadoId" class="form-control">
        @foreach (var cat in (List<Empleado>)ViewBag.Empleados)
        {
            <option value="@cat.Id">@cat.Nombre</option>
        }
    </select>
</div>

<div class="form-group">
    <label>Cliente: </label>
    <select asp-for="ClienteId" class="form-control">
        @foreach (var dog in (List<Cliente>)ViewBag.Clientes)
        {
            <option value="@dog.Id">@dog.Nombre</option>
        }
    </select>
</div>

<div class="form-group">
    <label asp-for="MontoTotal"></label>
    <input asp-for="MontoTotal" class="form-control">
    
</div>
<button class="btn btn-primary">GUARDAR</button>

</form>